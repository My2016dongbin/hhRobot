<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="viewModel"
            type="com.ehaohai.robot.ui.viewmodel.AudioListViewModel" />
    </data>


    <FrameLayout
        android:id="@+id/fl_all"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorBlack"
        tools:context=".MineActivity">

        <View
            android:layout_width="match_parent"
            android:layout_height="73dp"
            android:background="@color/colorBlackBack"/>

        <!--返回-->
        <ImageView
            android:id="@+id/back"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginStart="15dp"
            android:layout_marginTop="35dp"
            android:padding="5dp"
            android:scaleType="fitXY"
            android:src="@drawable/back" />

        <!--筛选-->
        <ImageView
            android:id="@+id/filter"
            android:visibility="gone"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginEnd="15dp"
            android:layout_marginTop="35dp"
            android:padding="5dp"
            android:scaleType="fitXY"
            android:layout_gravity="end"
            android:src="@drawable/ic_filter" />

        <!--标题-->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:layout_marginTop="26dp"
            android:textColor="@color/whiteColor"
            android:gravity="center"
            android:layout_gravity="center_horizontal"
            android:textSize="16sp"
            android:text="播放器"/>

        <!--点击开始录音-->
        <FrameLayout
            android:layout_marginTop="94dp"
            android:layout_width="260dp"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_gravity="center"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/record"
                    android:layout_width="128dp"
                    android:layout_height="128dp"
                    android:src="@drawable/ic_audio_record"/>
                <TextView
                    android:id="@+id/record_text"
                    android:text="点击开始录音"
                    android:layout_marginTop="18dp"
                    android:textColor="@color/gray1"
                    android:textSize="14sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
        </FrameLayout>

        <!--音频列表-->
        <LinearLayout
            android:id="@+id/ai_list"
            android:layout_marginStart="280dp"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="94dp"
            android:layout_marginBottom="30dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <!--ListView-->
            <com.scwang.smartrefresh.layout.SmartRefreshLayout
                android:id="@+id/refresh"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="0dp">
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recycle"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
            </com.scwang.smartrefresh.layout.SmartRefreshLayout>

            <TextView
                android:id="@+id/upload"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginTop="16dp"
                android:background="@drawable/bg_button2"
                android:gravity="center"
                android:text="上传"
                android:textColor="@color/c12"
                android:textSize="14sp" />

        </LinearLayout>

    </FrameLayout>
</layout>