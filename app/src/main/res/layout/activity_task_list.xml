<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="viewModel"
            type="com.ehaohai.robot.ui.viewmodel.TaskListViewModel" />
    </data>

    <androidx.drawerlayout.widget.DrawerLayout
        android:id="@+id/warnLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- 主内容区域 -->
        <FrameLayout
            android:id="@+id/fl_all"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorBlack"
            tools:context=".MineActivity">
            
            <View
                android:layout_width="match_parent"
                android:layout_height="73dp"
                android:background="@color/colorBlackBack"/>

            <!--返回-->
            <ImageView
                android:id="@+id/back"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginStart="15dp"
                android:layout_marginTop="35dp"
                android:padding="5dp"
                android:scaleType="fitXY"
                android:src="@drawable/back" />
            <TextView
                android:text="巡检管理"
                android:textColor="@color/whiteColor"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="35dp"
                android:textSize="16sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/point_manage"
                android:text="点位管理"
                android:textColor="@color/theme_color_blue"
                android:layout_gravity="end"
                android:layout_marginTop="37dp"
                android:layout_marginEnd="60dp"
                android:textSize="12sp"
                android:padding="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <!--新增-->
            <ImageView
                android:id="@+id/add"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="end"
                android:layout_marginEnd="15dp"
                android:layout_marginTop="35dp"
                android:padding="6dp"
                android:scaleType="fitXY"
                android:src="@drawable/ic_device_add" />

            <!--任务列表-->
            <LinearLayout
                android:id="@+id/ai_list"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginTop="94dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="270dp">
                <!--标题-->
                <LinearLayout
                    android:paddingStart="20dp"
                    android:paddingEnd="20dp"
                    android:background="@drawable/circle_gray_8_top"
                    android:layout_width="match_parent"
                    android:layout_height="44dp">
                    <TextView
                        android:layout_weight="3"
                        android:layout_gravity="center_vertical"
                        android:textColor="@color/gray1"
                        android:textSize="14sp"
                        android:text="任务名称"
                        android:maxLines="1"
                        android:ellipsize="end"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:layout_weight="2"
                        android:layout_gravity="center_vertical"
                        android:textColor="@color/gray1"
                        android:textSize="14sp"
                        android:text="任务周期"
                        android:maxLines="1"
                        android:ellipsize="end"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:layout_weight="2"
                        android:layout_gravity="center_vertical"
                        android:textColor="@color/gray1"
                        android:textSize="14sp"
                        android:text="任务路径"
                        android:maxLines="1"
                        android:ellipsize="end"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:layout_marginStart="3dp"
                        android:layout_weight="2"
                        android:layout_gravity="center_vertical"
                        android:textColor="@color/gray1"
                        android:textSize="14sp"
                        android:text="任务状态"
                        android:maxLines="1"
                        android:ellipsize="end"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:layout_weight="4"
                        android:layout_gravity="center_vertical"
                        android:textColor="@color/gray1"
                        android:textSize="14sp"
                        android:text="任务开始时间"
                        android:maxLines="1"
                        android:ellipsize="end"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:layout_weight="2"
                        android:layout_gravity="center_vertical"
                        android:textColor="@color/gray1"
                        android:textSize="14sp"
                        android:text="操作"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
                <!--ListView-->
                <com.scwang.smartrefresh.layout.SmartRefreshLayout
                    android:id="@+id/ai_refresh"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/ai_recycle"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />
                </com.scwang.smartrefresh.layout.SmartRefreshLayout>

            </LinearLayout>

        </FrameLayout>

        <!-- 抽屉内容 -->
        <ScrollView
            android:layout_marginTop="26dp"
            android:layout_gravity="end"
            android:background="@color/black_input_back"
            android:layout_width="360dp"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <!--新增巡检-->
                <LinearLayout
                    android:id="@+id/ll_add"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <!--新增巡检-->
                    <TextView
                        android:id="@+id/drawer_title_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="新增巡检"
                        android:textSize="16sp"
                        android:textColor="@color/whiteColor"
                        android:background="@color/setting"
                        android:paddingTop="16dp"
                        android:paddingBottom="16dp"
                        android:paddingStart="25dp"
                        />
                    <!--任务名称-->
                    <LinearLayout
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:text="任务名称"
                            android:textSize="14sp"
                            android:textColor="@color/gray1"
                            android:paddingTop="16dp"
                            android:paddingBottom="16dp"
                            android:paddingStart="25dp"
                            />
                        <EditText
                            android:id="@+id/drawer_name_edit"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginStart="20dp"
                            android:layout_marginEnd="20dp"
                            android:gravity="center_vertical|end"
                            android:background="@color/black_input_back"
                            android:text=""
                            android:hint="请输入任务名称"
                            android:inputType="text"
                            android:minHeight="48dp"
                            android:maxWidth="200dp"
                            android:textColor="@color/text_color12"
                            android:textColorHint="@color/text_color9"
                            android:textCursorDrawable="@drawable/edit_cursor_color"
                            android:textSize="14sp"
                            tools:ignore="TextContrastCheck" />
                    </LinearLayout>
                    <View
                        android:background="@color/line_color2"
                        android:layout_width="match_parent"
                        android:layout_marginStart="15dp"
                        android:layout_marginEnd="15dp"
                        android:layout_height="0.5dp"/>
                    <!--任务周期-->
                    <LinearLayout
                        android:id="@+id/tap_around"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:text="任务周期"
                            android:textSize="14sp"
                            android:textColor="@color/gray1"
                            android:paddingTop="16dp"
                            android:paddingBottom="16dp"
                            android:paddingStart="25dp"
                            />
                        <TextView
                            android:id="@+id/tap_around_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="2小时"
                            android:textSize="14sp"
                            android:textColor="@color/gray1"
                            android:layout_gravity="center_vertical|end"
                            android:paddingTop="16dp"
                            android:paddingBottom="16dp"
                            android:layout_marginStart="20dp"
                            android:layout_marginEnd="5dp"
                            />
                        <ImageView
                            android:layout_marginEnd="20dp"
                            android:layout_width="16dp"
                            android:layout_height="16dp"
                            android:layout_gravity="center_vertical|end"
                            android:src="@drawable/ic_right_gray" />
                    </LinearLayout>
                    <View
                        android:background="@color/line_color2"
                        android:layout_width="match_parent"
                        android:layout_marginStart="15dp"
                        android:layout_marginEnd="15dp"
                        android:layout_height="0.5dp"/>
                    <!--任务路径-->
                    <LinearLayout
                        android:id="@+id/tap_lines"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_weight="2"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:text="任务路径"
                            android:maxLines="1"
                            android:textSize="14sp"
                            android:textColor="@color/gray1"
                            android:paddingTop="16dp"
                            android:paddingBottom="16dp"
                            android:paddingStart="25dp"
                            />
                        <TextView
                            android:id="@+id/tap_route_text"
                            android:layout_weight="5"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:text=""
                            android:maxLines="1"
                            android:ellipsize="end"
                            android:textSize="14sp"
                            android:textColor="@color/gray1"
                            android:layout_gravity="center_vertical|end"
                            android:gravity="end"
                            android:paddingTop="16dp"
                            android:paddingBottom="16dp"
                            android:layout_marginStart="20dp"
                            android:layout_marginEnd="5dp"
                            />
                        <ImageView
                            android:layout_marginEnd="20dp"
                            android:layout_width="16dp"
                            android:layout_height="16dp"
                            android:layout_gravity="center_vertical|end"
                            android:src="@drawable/ic_right_gray" />
                    </LinearLayout>
                    <View
                        android:background="@color/line_color2"
                        android:layout_width="match_parent"
                        android:layout_marginStart="15dp"
                        android:layout_marginEnd="15dp"
                        android:layout_height="0.5dp"/>
                    <!--任务状态-->
                    <LinearLayout
                        android:id="@+id/task_status"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_weight="2"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:text="任务状态"
                            android:maxLines="1"
                            android:textSize="14sp"
                            android:textColor="@color/gray1"
                            android:paddingTop="16dp"
                            android:paddingBottom="16dp"
                            android:paddingStart="25dp"
                            />
                        <TextView
                            android:id="@+id/tap_status_text"
                            android:layout_weight="5"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:text=""
                            android:maxLines="1"
                            android:ellipsize="end"
                            android:textSize="14sp"
                            android:textColor="@color/gray1"
                            android:layout_gravity="center_vertical|end"
                            android:gravity="end"
                            android:paddingTop="16dp"
                            android:paddingBottom="16dp"
                            android:layout_marginStart="20dp"
                            android:layout_marginEnd="25dp"
                            />
                    </LinearLayout>
                    <View
                        android:id="@+id/task_status_line"
                        android:background="@color/line_color2"
                        android:layout_width="match_parent"
                        android:layout_marginStart="15dp"
                        android:layout_marginEnd="15dp"
                        android:layout_height="0.5dp"/>
                    <!--任务开始时间-->
                    <LinearLayout
                        android:id="@+id/tap_start_time"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:text="任务开始时间"
                            android:textSize="14sp"
                            android:textColor="@color/gray1"
                            android:paddingTop="16dp"
                            android:paddingBottom="16dp"
                            android:paddingStart="25dp"
                            />
                        <TextView
                            android:id="@+id/tap_start_time_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=""
                            android:textSize="14sp"
                            android:textColor="@color/gray1"
                            android:layout_gravity="center_vertical|end"
                            android:paddingTop="16dp"
                            android:paddingBottom="16dp"
                            android:layout_marginStart="20dp"
                            android:layout_marginEnd="5dp"
                            />
                        <ImageView
                            android:layout_marginEnd="20dp"
                            android:layout_width="16dp"
                            android:layout_height="16dp"
                            android:layout_gravity="center_vertical|end"
                            android:src="@drawable/ic_right_gray" />
                    </LinearLayout>
                    <View
                        android:background="@color/line_color2"
                        android:layout_width="match_parent"
                        android:layout_marginStart="15dp"
                        android:layout_marginEnd="15dp"
                        android:layout_height="0.5dp"/>

                    <TextView
                        android:id="@+id/add_confirm"
                        android:layout_marginTop="10dp"
                        android:layout_width="200dp"
                        android:layout_height="45dp"
                        android:background="@drawable/bg_button2"
                        android:gravity="center"
                        android:layout_gravity="center"
                        android:text="确定"
                        android:textColor="@color/c12"
                        android:textSize="16sp" />

                </LinearLayout>
                <!--任务周期-->
                <LinearLayout
                    android:id="@+id/ll_around"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <!--任务周期-->
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="任务周期"
                        android:textSize="16sp"
                        android:textColor="@color/whiteColor"
                        android:background="@color/setting"
                        android:paddingTop="14dp"
                        android:paddingBottom="14dp"
                        android:paddingStart="25dp"
                        />
                    <!--4小时-->
                    <LinearLayout
                        android:id="@+id/around_4_hour"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:text="4小时"
                            android:textSize="14sp"
                            android:textColor="@color/gray1"
                            android:paddingTop="14dp"
                            android:paddingBottom="14dp"
                            android:paddingStart="25dp"
                            />
                        <ImageView
                            android:id="@+id/around_4_hour_state"
                            android:layout_marginEnd="20dp"
                            android:layout_width="16dp"
                            android:layout_height="16dp"
                            android:layout_gravity="center_vertical|end"
                            android:src="@drawable/ic_yes" />
                    </LinearLayout>
                    <View
                        android:background="@color/line_color2"
                        android:layout_width="match_parent"
                        android:layout_marginStart="15dp"
                        android:layout_marginEnd="15dp"
                        android:layout_height="0.5dp"/>
                    <!--8小时-->
                    <LinearLayout
                        android:id="@+id/around_8_hour"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:text="8小时"
                            android:textSize="14sp"
                            android:textColor="@color/gray1"
                            android:paddingTop="14dp"
                            android:paddingBottom="14dp"
                            android:paddingStart="25dp"
                            />
                        <ImageView
                            android:id="@+id/around_8_hour_state"
                            android:layout_marginEnd="20dp"
                            android:layout_width="16dp"
                            android:layout_height="16dp"
                            android:layout_gravity="center_vertical|end"
                            android:src="@drawable/ic_un" />
                    </LinearLayout>
                    <View
                        android:background="@color/line_color2"
                        android:layout_width="match_parent"
                        android:layout_marginStart="15dp"
                        android:layout_marginEnd="15dp"
                        android:layout_height="0.5dp"/>
                    <!--12小时-->
                    <LinearLayout
                        android:id="@+id/around_12_hour"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:text="12小时"
                            android:textSize="14sp"
                            android:textColor="@color/gray1"
                            android:paddingTop="14dp"
                            android:paddingBottom="14dp"
                            android:paddingStart="25dp"
                            />
                        <ImageView
                            android:id="@+id/around_12_hour_state"
                            android:layout_marginEnd="20dp"
                            android:layout_width="16dp"
                            android:layout_height="16dp"
                            android:layout_gravity="center_vertical|end"
                            android:src="@drawable/ic_un" />
                    </LinearLayout>
                    <View
                        android:background="@color/line_color2"
                        android:layout_width="match_parent"
                        android:layout_marginStart="15dp"
                        android:layout_marginEnd="15dp"
                        android:layout_height="0.5dp"/>
                    <!--每天-->
                    <LinearLayout
                        android:id="@+id/around_24_hour"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:text="每天"
                            android:textSize="14sp"
                            android:textColor="@color/gray1"
                            android:paddingTop="14dp"
                            android:paddingBottom="14dp"
                            android:paddingStart="25dp"
                            />
                        <ImageView
                            android:id="@+id/around_24_hour_state"
                            android:layout_marginEnd="20dp"
                            android:layout_width="16dp"
                            android:layout_height="16dp"
                            android:layout_gravity="center_vertical|end"
                            android:src="@drawable/ic_un" />
                    </LinearLayout>
                    <View
                        android:background="@color/line_color2"
                        android:layout_width="match_parent"
                        android:layout_marginStart="15dp"
                        android:layout_marginEnd="15dp"
                        android:layout_height="0.5dp"/>
                    <!--自定义-->
                    <LinearLayout
                        android:id="@+id/around_sum_hour"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:text="自定义"
                            android:textSize="14sp"
                            android:textColor="@color/gray1"
                            android:paddingTop="14dp"
                            android:paddingBottom="14dp"
                            android:paddingStart="25dp"
                            />
                        <TextView
                            android:id="@+id/around_sum_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="2小时"
                            android:textSize="14sp"
                            android:textColor="@color/gray1"
                            android:layout_gravity="center_vertical|end"
                            android:paddingTop="14dp"
                            android:paddingBottom="14dp"
                            android:layout_marginStart="20dp"
                            android:layout_marginEnd="5dp"
                            />
                        <ImageView
                            android:layout_marginEnd="20dp"
                            android:layout_width="16dp"
                            android:layout_height="16dp"
                            android:layout_gravity="center_vertical|end"
                            android:src="@drawable/ic_right_gray" />
                        <ImageView
                            android:id="@+id/around_sum_hour_state"
                            android:layout_marginEnd="20dp"
                            android:layout_width="16dp"
                            android:layout_height="16dp"
                            android:layout_gravity="center_vertical|end"
                            android:src="@drawable/ic_right_gray" />
                    </LinearLayout>
                    <View
                        android:background="@color/line_color2"
                        android:layout_width="match_parent"
                        android:layout_marginStart="15dp"
                        android:layout_marginEnd="15dp"
                        android:layout_height="0.5dp"/>

                    <TextView
                        android:id="@+id/around_confirm"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp"
                        android:layout_width="200dp"
                        android:layout_height="45dp"
                        android:background="@drawable/bg_button2"
                        android:gravity="center"
                        android:layout_gravity="center"
                        android:text="确定"
                        android:textColor="@color/c12"
                        android:textSize="16sp" />

                </LinearLayout>
            </LinearLayout>
        </ScrollView>

    </androidx.drawerlayout.widget.DrawerLayout>
</layout>