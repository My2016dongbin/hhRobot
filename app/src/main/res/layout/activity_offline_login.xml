<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="viewModel"
            type="com.ehaohai.robot.ui.viewmodel.OfflineLoginViewModel" />
    </data>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorBlack"
        tools:context=".LoginActivity">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="66dp"
            android:layout_marginTop="34dp"
            android:layout_marginEnd="65dp"
            android:layout_marginBottom="34dp"
            android:background="@drawable/ic_forget_back">

            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="8">

                <ImageView
                    android:id="@+id/back"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginStart="20dp"
                    android:padding="5dp"
                    android:src="@drawable/back"
                    android:scaleType="fitXY"/>
            </FrameLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="10"
                android:orientation="vertical"
                android:paddingStart="37dp"
                android:paddingEnd="37dp">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_marginTop="30dp"
                    android:background="@drawable/login_input_bg"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:layout_marginStart="23dp"
                        android:src="@drawable/ic_user" />

                    <EditText
                        android:id="@+id/username_edit"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginStart="12dp"
                        android:layout_marginEnd="23dp"
                        android:background="@color/robot_input_back"
                        android:hint="手机号或者邮箱地址"
                        android:inputType="text"
                        android:textColor="@color/c6"
                        android:textColorHint="@color/c56"
                        android:textCursorDrawable="@drawable/edit_cursor_color"
                        android:textSize="14sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_marginTop="16dp"
                    android:background="@drawable/login_input_bg"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:layout_marginStart="23dp"
                        android:src="@drawable/ic_password" />

                    <EditText
                        android:id="@+id/password_edit"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginStart="12dp"
                        android:layout_weight="1"
                        android:background="@color/robot_input_back"
                        android:hint="请输入密码"
                        android:inputType="textPassword"
                        android:textColor="@color/c6"
                        android:textColorHint="@color/c56"
                        android:textCursorDrawable="@drawable/edit_cursor_color"
                        android:textSize="14sp" />

                    <ImageView
                        android:id="@+id/eye"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_marginStart="12dp"
                        android:layout_marginEnd="18dp"
                        android:padding="5dp"
                        android:src="@drawable/ic_bi" />
                </LinearLayout>

                <TextView
                    android:id="@+id/login_button"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_marginTop="16dp"
                    android:background="@drawable/bg_button2"
                    android:gravity="center"
                    android:text="登录"
                    android:textColor="@color/c12"
                    android:textSize="16sp" />


            </LinearLayout>
        </LinearLayout>

    </FrameLayout>
</layout>