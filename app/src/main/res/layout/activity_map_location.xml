<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="viewModel"
            type="com.ehaohai.robot.ui.viewmodel.MapLocationViewModel" />
    </data>
    <androidx.drawerlayout.widget.DrawerLayout
        android:id="@+id/warnLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- 主内容区域 -->

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorBlackBlue"
            tools:context=".AccountSafeActivity">

            <View
                android:background="@color/colorBlack"
                android:layout_width="match_parent"
                android:layout_height="20dp"/>
            <FrameLayout
                android:layout_marginTop="20dp"
                android:background="@color/colorBlack"
                android:layout_width="match_parent"
                android:layout_height="48dp">

                <ImageView
                    android:id="@+id/back"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="20dp"
                    android:padding="5dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/back" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="火点定位"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    android:textStyle="bold" />
            </FrameLayout>

            <com.amap.api.maps.MapView
                android:id="@+id/map_view"
                android:layout_marginTop="68dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>

        </FrameLayout>

        <!-- 抽屉内容 -->
        <ScrollView
            android:layout_marginTop="26dp"
            android:layout_gravity="end"
            android:background="@color/black_input_back"
            android:layout_width="360dp"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!--浩海机器狗-->
                <TextView
                    android:id="@+id/warn_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="浩海机器狗"
                    android:textSize="16sp"
                    android:textColor="@color/whiteColor"
                    android:background="@color/setting"
                    android:paddingTop="16dp"
                    android:paddingBottom="16dp"
                    android:paddingStart="25dp"
                    />
                <!--报警时间-->
                <LinearLayout
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="报警时间"
                        android:textSize="14sp"
                        android:textColor="@color/gray1"
                        android:paddingTop="16dp"
                        android:paddingBottom="16dp"
                        android:paddingStart="25dp"
                        />
                    <TextView
                        android:id="@+id/warn_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="2025-07-25 12:12:00"
                        android:textSize="14sp"
                        android:textColor="@color/gray1"
                        android:layout_gravity="center_vertical|end"
                        android:paddingTop="16dp"
                        android:paddingBottom="16dp"
                        android:layout_marginStart="20dp"
                        android:layout_marginEnd="20dp"
                        />
                </LinearLayout>
                <View
                    android:background="@color/line_color2"
                    android:layout_width="match_parent"
                    android:layout_marginStart="15dp"
                    android:layout_marginEnd="15dp"
                    android:layout_height="0.5dp"/>
                <!--报警类型-->
                <LinearLayout
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="报警类型"
                        android:textSize="14sp"
                        android:textColor="@color/gray1"
                        android:paddingTop="16dp"
                        android:paddingBottom="16dp"
                        android:paddingStart="25dp"
                        />
                    <TextView
                        android:id="@+id/warn_type"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="烟雾火焰"
                        android:textSize="14sp"
                        android:textColor="@color/gray1"
                        android:layout_gravity="center_vertical|end"
                        android:paddingTop="16dp"
                        android:paddingBottom="16dp"
                        android:layout_marginStart="20dp"
                        android:layout_marginEnd="20dp"
                        />
                </LinearLayout>
                <View
                    android:background="@color/line_color2"
                    android:layout_width="match_parent"
                    android:layout_marginStart="15dp"
                    android:layout_marginEnd="15dp"
                    android:layout_height="0.5dp"/>
                <!--报警图像-->
                <LinearLayout
                    android:orientation="vertical"
                    android:gravity="center_vertical"
                    android:paddingStart="25dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="报警图像"
                        android:textSize="14sp"
                        android:textColor="@color/gray1"
                        android:paddingTop="16dp"
                        android:paddingBottom="16dp" />
                    <ImageView
                        android:id="@+id/warn_image"
                        android:layout_marginTop="10dp"
                        android:src="@drawable/ic_dog_logo"
                        android:scaleType="fitXY"
                        android:layout_width="230dp"
                        android:layout_height="150dp"/>
                </LinearLayout>
                <View
                    android:background="@color/line_color2"
                    android:layout_width="match_parent"
                    android:layout_marginStart="15dp"
                    android:layout_marginEnd="15dp"
                    android:layout_height="0.5dp"/>
                <!--导航-->
                <TextView
                    android:id="@+id/guide"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:layout_width="200dp"
                    android:layout_height="45dp"
                    android:background="@drawable/bg_button2"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:text="导航"
                    android:textColor="@color/c12"
                    android:textSize="16sp" />
            </LinearLayout>
        </ScrollView>

    </androidx.drawerlayout.widget.DrawerLayout>
</layout>