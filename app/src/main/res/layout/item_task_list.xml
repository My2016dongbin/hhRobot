<?xml version="1.0" encoding="utf-8"?>
<layout>
    <data>
        <variable
            name="adapter"
            type="com.ehaohai.robot.ui.multitype.TaskViewBinder" />
        <variable
            name="item"
            type="com.ehaohai.robot.ui.multitype.Task" />
    </data>
    <FrameLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@color/colorBlackBack">

        <LinearLayout
            android:id="@+id/click"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:onClick="@{()->adapter.onItemClick(item)}">
            <TextView
                android:id="@+id/taskName"
                android:layout_weight="3"
                android:layout_gravity="center_vertical"
                android:textColor="@color/gray1"
                android:textSize="14sp"
                android:text="一楼巡检"
                android:maxLines="1"
                android:ellipsize="end"
                android:layout_width="0dp"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/taskCircle"
                android:layout_weight="2"
                android:layout_gravity="center_vertical"
                android:textColor="@color/gray1"
                android:textSize="14sp"
                android:text="每天"
                android:maxLines="1"
                android:ellipsize="end"
                android:layout_width="0dp"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/taskRoute"
                android:layout_weight="2"
                android:layout_gravity="center_vertical"
                android:textColor="@color/gray1"
                android:textSize="14sp"
                android:maxLines="1"
                android:ellipsize="end"
                android:text="站点1；站点2；站点3；"
                android:layout_width="0dp"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/taskStatus"
                android:layout_marginStart="3dp"
                android:layout_weight="2"
                android:layout_gravity="center_vertical"
                android:textColor="@color/gray1"
                android:textSize="14sp"
                android:text="未开始"
                android:maxLines="1"
                android:ellipsize="end"
                android:layout_width="0dp"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/taskStartTime"
                android:layout_weight="4"
                android:layout_gravity="center_vertical"
                android:textColor="@color/gray1"
                android:textSize="14sp"
                android:text="08:00:00"
                android:maxLines="1"
                android:ellipsize="end"
                android:layout_width="0dp"
                android:layout_height="wrap_content"/>
            <LinearLayout
                android:layout_weight="2"
                android:layout_width="0dp"
                android:layout_height="match_parent">
                <ImageView
                    android:id="@+id/start"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center_vertical"
                    android:padding="6dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/task_start" />
                <ImageView
                    android:id="@+id/edit"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center_vertical"
                    android:padding="6dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/task_edit" />
                <ImageView
                    android:id="@+id/delete"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center_vertical"
                    android:padding="6dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/task_delete" />
            </LinearLayout>
        </LinearLayout>

        <!--<ImageView
            android:id="@+id/unread"
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:layout_gravity="top|start"
            android:src="@drawable/unread" />-->

    </FrameLayout>
</layout>
