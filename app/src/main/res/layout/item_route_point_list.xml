<?xml version="1.0" encoding="utf-8"?>
<layout>
    <data>
        <variable
            name="adapter"
            type="com.ehaohai.robot.ui.multitype.RoutePointViewBinder" />
        <variable
            name="item"
            type="com.ehaohai.robot.ui.multitype.Point" />
    </data>

    <HorizontalScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/scroll"
        android:layout_marginTop="10dp"
        android:scrollbars="none"
        android:layout_width="match_parent"
        android:layout_height="45dp">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="45dp">

            <LinearLayout
                android:id="@+id/click"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"
                android:background="@drawable/circle_set_4"
                android:layout_width="772dp"
                android:layout_height="45dp"
                android:orientation="horizontal"
                android:layout_gravity="center">
                <FrameLayout
                    android:layout_marginEnd="10dp"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/circle_blue_12"
                    android:paddingStart="6dp"
                    android:paddingEnd="6dp"
                    android:paddingTop="1dp"
                    android:paddingBottom="1dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/index"
                        android:text="1"
                        android:textSize="12sp"
                        android:gravity="center"
                        android:textColor="@color/white"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </FrameLayout>
                <TextView
                    android:id="@+id/name"
                    android:layout_weight="5"
                    android:layout_gravity="center_vertical"
                    android:textColor="@color/gray1"
                    android:textSize="14sp"
                    android:text=""
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:maxLength="20"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/xy"
                    android:layout_weight="4"
                    android:layout_gravity="center_vertical"
                    android:textColor="@color/gray1"
                    android:textSize="14sp"
                    android:text=""
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/type"
                    android:layout_weight="3"
                    android:layout_gravity="center_vertical"
                    android:textColor="@color/gray1"
                    android:textSize="14sp"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:text="普通点"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/floor"
                    android:gravity="center"
                    android:layout_weight="2"
                    android:layout_gravity="center_vertical"
                    android:textColor="@color/gray1"
                    android:textSize="14sp"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:text="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"/>
                <LinearLayout
                    android:id="@+id/more"
                    android:layout_weight="2"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:gravity="end"
                    android:layout_marginEnd="5dp">
                    <ImageView
                        android:layout_width="18dp"
                        android:layout_height="16dp"
                        android:layout_gravity="center_vertical"
                        android:scaleType="fitXY"
                        android:src="@drawable/ic_right_gray" />
                </LinearLayout>
            </LinearLayout>

            <TextView
                android:id="@+id/delete"
                android:layout_marginEnd="10dp"
                android:text="删除"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:gravity="center"
                android:layout_marginStart="20dp"
                android:background="@drawable/circle_red_8"
                android:layout_width="90dp"
                android:layout_height="match_parent"/>

        </LinearLayout>
    </HorizontalScrollView>
</layout>
