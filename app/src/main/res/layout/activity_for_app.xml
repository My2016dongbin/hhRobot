<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="viewModel"
            type="com.ehaohai.robot.ui.viewmodel.ForAppViewModel" />
    </data>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorBlack"
        tools:context=".AccountSafeActivity">

        <View
            android:background="@color/colorBlack"
            android:layout_width="match_parent"
            android:layout_height="20dp"/>
        <FrameLayout
            android:layout_marginTop="20dp"
            android:background="@color/colorBlack"
            android:layout_width="match_parent"
            android:layout_height="48dp">

            <ImageView
                android:id="@+id/back"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="20dp"
                android:padding="5dp"
                android:scaleType="fitXY"
                android:src="@drawable/back" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:textStyle="bold" />
        </FrameLayout>

        <LinearLayout
            android:layout_marginTop="68dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:orientation="vertical"
                android:padding="15dp"
                android:gravity="center"
                android:layout_weight="5"
                android:layout_height="wrap_content"
                android:layout_width="0dp">
                <ImageView
                    android:layout_marginTop="10dp"
                    android:src="@drawable/dog"
                    android:layout_width="80dp"
                    android:layout_height="80dp"/>
                <TextView
                    android:text="浩海机器狗"
                    android:textColor="@color/c"
                    android:textSize="18sp"
                    android:layout_marginTop="15dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <LinearLayout
                    android:layout_marginTop="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <View
                        android:layout_gravity="center"
                        android:background="@drawable/circle_red_4"
                        android:layout_width="8dp"
                        android:layout_height="8dp"/>
                    <TextView
                        android:text="V1.10.0-12273c"
                        android:layout_marginStart="10dp"
                        android:textColor="@color/c4"
                        android:textSize="18sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
                <TextView
                    android:id="@+id/update"
                    android:layout_marginTop="20dp"
                    android:layout_gravity="center_horizontal"
                    android:text="更新到最新版本"
                    android:gravity="center"
                    android:textColor="@color/c"
                    android:textSize="14sp"
                    android:background="@drawable/bg_button2"
                    android:layout_width="210dp"
                    android:layout_height="40dp"/>
            </LinearLayout>
            <LinearLayout
                android:orientation="vertical"
                android:layout_weight="6"
                android:layout_height="wrap_content"
                android:layout_width="0dp">
                <FrameLayout
                    android:id="@+id/list"
                    android:layout_width="match_parent"
                    android:layout_height="46dp">
                    <TextView
                        android:text="版本更新列表"
                        android:layout_gravity="center_vertical"
                        android:layout_marginStart="15dp"
                        android:textSize="14sp"
                        android:textColor="@color/colorTextGray"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <ImageView
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:layout_gravity="center_vertical|end"
                        android:layout_marginEnd="16dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/ic_right_gray" />
                </FrameLayout>
                <View
                    android:background="@color/c7"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"/>
                <FrameLayout
                    android:id="@+id/guide"
                    android:layout_width="match_parent"
                    android:layout_height="46dp">
                    <TextView
                        android:text="引导"
                        android:layout_gravity="center_vertical"
                        android:layout_marginStart="15dp"
                        android:textSize="14sp"
                        android:textColor="@color/colorTextGray"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <ImageView
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:layout_gravity="center_vertical|end"
                        android:layout_marginEnd="16dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/ic_right_gray" />
                </FrameLayout>
                <View
                    android:background="@color/c7"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"/>
                <FrameLayout
                    android:id="@+id/points"
                    android:layout_width="match_parent"
                    android:layout_height="46dp">
                    <TextView
                        android:text="点位管理"
                        android:layout_gravity="center_vertical"
                        android:layout_marginStart="15dp"
                        android:textSize="14sp"
                        android:textColor="@color/colorTextGray"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <ImageView
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:layout_gravity="center_vertical|end"
                        android:layout_marginEnd="16dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/ic_right_gray" />
                </FrameLayout>
                <View
                    android:background="@color/c7"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"/>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_gravity="center_horizontal|bottom"
            android:paddingBottom="15dp"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content">
            <TextView
                android:id="@+id/one"
                android:text="《隐私协议》"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="13dp"
                android:textSize="12sp"
                android:textColor="@color/theme_color_blue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <View
                android:background="@color/c7"
                android:layout_marginStart="15dp"
                android:layout_gravity="center"
                android:layout_width="1dp"
                android:layout_height="15dp"/>
            <TextView
                android:id="@+id/two"
                android:text="《用户隐私协议》"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="15dp"
                android:textSize="12sp"
                android:textColor="@color/theme_color_blue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <View
                android:background="@color/c7"
                android:layout_marginStart="15dp"
                android:layout_gravity="center"
                android:layout_width="1dp"
                android:layout_height="15dp"/>
            <TextView
                android:id="@+id/three"
                android:text="《收费说明》"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="15dp"
                android:textSize="12sp"
                android:textColor="@color/theme_color_blue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>

    </FrameLayout>
</layout>