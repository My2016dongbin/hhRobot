<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="viewModel"
            type="com.ehaohai.robot.ui.viewmodel.RegisterViewModel" />
    </data>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorBlack"
        tools:context=".RegisterActivity">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="66dp"
            android:layout_marginTop="34dp"
            android:layout_marginEnd="65dp"
            android:layout_marginBottom="34dp"
            android:background="@drawable/ic_regist_back">

            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="8">

                <ImageView
                    android:id="@+id/back"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginStart="20dp"
                    android:padding="5dp"
                    android:src="@drawable/back"
                    android:scaleType="fitXY"/>

            </FrameLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="10"
                android:orientation="vertical"
                android:paddingStart="37dp"
                android:paddingEnd="37dp">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="24dp"
                    android:text="手机号注册"
                    android:textStyle="bold"
                    android:textColor="@color/colorBlack"
                    android:textSize="20sp" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_marginTop="24dp"
                    android:background="@drawable/login_input_bg"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/username_edit"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginStart="17dp"
                        android:layout_marginEnd="23dp"
                        android:background="@color/robot_input_back"
                        android:hint="输入手机号"
                        android:inputType="number"
                        android:maxLength="11"
                        android:textColor="@color/c6"
                        android:textColorHint="@color/c56"
                        android:textCursorDrawable="@drawable/edit_cursor_color"
                        android:textSize="14sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_marginTop="16dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="48dp"
                        android:background="@drawable/login_input_bg"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <EditText
                            android:id="@+id/password_edit"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginStart="17dp"
                            android:layout_weight="1"
                            android:background="@color/robot_input_back"
                            android:hint="验证码"
                            android:inputType="number"
                            android:maxLength="6"
                            android:textColor="@color/c6"
                            android:textColorHint="@color/c56"
                            android:textCursorDrawable="@drawable/edit_cursor_color"
                            android:textSize="14sp" />

                    </LinearLayout>
                    <TextView
                        android:id="@+id/code_button"
                        android:layout_width="wrap_content"
                        android:layout_height="48dp"
                        android:layout_marginStart="16dp"
                        android:paddingStart="12dp"
                        android:paddingEnd="12dp"
                        android:background="@drawable/bg_button2"
                        android:gravity="center"
                        android:text="获取验证码"
                        android:textColor="@color/c12"
                        android:textSize="14sp" />
                </LinearLayout>


                <TextView
                    android:id="@+id/next_button"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_marginTop="44dp"
                    android:background="@drawable/bg_button2"
                    android:gravity="center"
                    android:text="下一步"
                    android:textColor="@color/c12"
                    android:textSize="16sp" />



            </LinearLayout>
        </LinearLayout>

    </FrameLayout>
</layout>