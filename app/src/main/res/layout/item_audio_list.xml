<?xml version="1.0" encoding="utf-8"?>
<layout>
    <data>
        <variable
            name="adapter"
            type="com.ehaohai.robot.ui.multitype.AudioViewBinder" />
        <variable
            name="item"
            type="com.ehaohai.robot.ui.multitype.Audio" />
    </data>
    <FrameLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginBottom="12dp"
        android:background="@drawable/circle_gray_4">

        <LinearLayout
            android:id="@+id/click"
            android:paddingStart="20dp"
            android:paddingEnd="16dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:onClick="@{()->adapter.onItemClick(item)}">
            <ImageView
                android:id="@+id/play"
                android:layout_gravity="center_vertical"
                android:src="@drawable/ic_play"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:layout_width="12dp"
                android:scaleType="fitXY"
                android:layout_height="16dp"/>
            <TextView
                android:id="@+id/name"
                android:layout_weight="1"
                android:layout_gravity="center_vertical"
                android:textColor="@color/whiteColor"
                android:layout_marginStart="12dp"
                android:textSize="14sp"
                android:text="20250206_02"
                android:layout_width="0dp"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/time"
                android:layout_weight="1"
                android:layout_gravity="center_vertical"
                android:textColor="@color/gray1"
                android:textSize="12sp"
                android:text="2025-02-06 12:00:00"
                android:gravity="end"
                android:layout_width="0dp"
                android:layout_height="wrap_content"/>
            <FrameLayout
                android:id="@+id/more"
                android:layout_marginStart="20dp"
                android:layout_width="30dp"
                android:layout_height="match_parent">
                <ImageView
                    android:layout_gravity="center"
                    android:src="@drawable/ic_more_gray"
                    android:layout_width="18dp"
                    android:scaleType="fitXY"
                    android:layout_height="4dp"/>
            </FrameLayout>
        </LinearLayout>

    </FrameLayout>
</layout>
